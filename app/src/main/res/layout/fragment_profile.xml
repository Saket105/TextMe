<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:context=".Fragments.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/detail_bg"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_mono"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/detail_bg1"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:text="Change your profile Picture and Name Here..."/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:scaleType="fitXY"
                android:src="@drawable/saket_one"/>

            <EditText
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserName"
                android:fontFamily="@font/ubuntu_mono"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textSize="22sp"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/update_photo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="#fff"
                android:backgroundTint="@color/main_color2"
                android:layout_below="@+id/username"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/ubuntu_mono"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>